        self.wave_burst_delay = QDoubleSpinBox(); self.wave_burst_delay.setDecimals(6); self.wave_burst_delay.setRange(0,1000); self.wave_burst_delay.setValue(0)
        self.wave_phase_mark = QCheckBox("Phase marker")
