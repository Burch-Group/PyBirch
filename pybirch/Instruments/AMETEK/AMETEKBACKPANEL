# try flexible import for pymeasure Ametek driver — different versions may use different names
try:
    from pymeasure.instruments.ametek import Ametek7230 as _AmetekClass
except Exception:
    try:
        from pymeasure.instruments.ametek import Ametek7270 as _AmetekClass
    except Exception:
        _AmetekClass = None

