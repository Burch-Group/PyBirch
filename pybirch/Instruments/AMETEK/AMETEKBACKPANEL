        self.phase1_lbl = QtWidgets.QLabel("Phase1: –")
        self.mag2_lbl = QtWidgets.QLabel("Mag2: –")
        self.phase2_lbl = QtWidgets.QLabel("Phase2: –")

        meas_layout.addWidget(self.x_lbl, 0, 0)
        meas_layout.addWidget(self.y_lbl, 0, 1)
