        grid.addWidget(meas_grp, 6, 0, 2, 3)

        # Curve buffer panel
        curve_grp = QtWidgets.QGroupBox("Curve Buffer")
        curve_layout = QtWidgets.QVBoxLayout(curve_grp)

        cb_hbox = QtWidgets.QHBoxLayout()
